<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/loginback"
    android:layout_width="match_parent"
    android:paddingTop="6dp"
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:paddingBottom="6dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/softgray"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card13"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/transparent"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Büro Adı: "
                    android:textColor="@color/darkbluegray"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/buroAd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/darkbluegray"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
              >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Büro Tel1: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/buroTel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/darkbluegray"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
           >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Büro Tel2: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/buroTel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/darkbluegray"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Büro Adres: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/buroAdres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/darkbluegray"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fax: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/fax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vergi Numarası: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/vergiNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vergi Dairesi: "
                    android:textStyle="bold"
                    android:textColor="@color/darkbluegray"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    />
                <EditText
                    android:id="@+id/vergiDairesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkbluegray"
                    android:layout_marginTop="2dp"
                    />
            </TableRow>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:text="Bilgileri Güncelle"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_span="2" />
        </TableLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</LinearLayout>
