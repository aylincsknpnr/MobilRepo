<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3,4,5,6,7,8">
            <TableRow>
                <ImageView
                    android:tag="image_tag"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:src="@drawable/haberim" />

                <TextView
                    android:id="@+id/h_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tarih"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_span="7" />
            </TableRow>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:background="@drawable/back2"
                android:tag="cards main container"
                android:layout_span="7">
            </LinearLayout>
            <TextView
                android:id="@+id/h_baslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="basşlık"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="8pt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="7" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Detay İçin Tıklayın"
                android:textSize="8pt"
                android:textStyle="bold"
                android:textColor="@color/good"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="6"
                android:gravity="right"
                android:layout_gravity="right"
                />

        </TableLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/h_detay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="8pt"
        android:textStyle="bold"
        android:background="@drawable/back"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>
