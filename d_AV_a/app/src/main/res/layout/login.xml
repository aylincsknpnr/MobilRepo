<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@drawable/layer_card_background"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:padding="20dp"
            android:gravity="center"
            android:text="Ankara Barosu Dava Uygulaması"
            android:textColor="#FF0040"
            android:layout_gravity="center" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
            <ImageView
                android:id="@+id/useımage"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/username"
                android:layout_gravity="left"
                android:layout_column="0"
                android:layout_weight="0.08" />
        <EditText
            android:id="@+id/un"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:hint="Kullanıcı Adı Giriniz"
            android:textColorHint="#FF0040"
            android:layout_weight="0.85"></EditText>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
            <ImageView
                android:id="@+id/passımage"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/kilit"
                android:layout_gravity="left"
                android:layout_column="0"
                android:layout_weight="0.08" />
        <EditText
            android:id="@+id/pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:hint="Parola Giriniz"
            android:textColorHint="#FF0040"
            android:layout_gravity="right"
            android:layout_weight="0.85"
            android:password="true"></EditText>

</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="#FF0040"
            android:text="GİRİŞ"
            />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_card_background"
        android:weightSum="1">
        <ImageView
            android:id="@+id/passımage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ank_baro"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_weight="0.08" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
